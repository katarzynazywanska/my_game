<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:theme="@style/ThemeOverlay.ObstickleAvoider.FullscreenContainer"
    tools:context=".Entry">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="714dp"
            android:layout_height="892dp"
            android:layout_gravity="center"
            android:src="@drawable/backgroung_img"
            android:contentDescription="tlo"
            />

        <TextView
            android:id="@+id/fullscreen_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/stalinist_one"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="@string/entry_txt"
            android:textColor="#D295BF"
            android:textColorHighlight="#8C1A1A"
            android:textColorLink="#6E1B1B"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.ObstickleAvoider.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
        </LinearLayout>
    </FrameLayout>

</FrameLayout>